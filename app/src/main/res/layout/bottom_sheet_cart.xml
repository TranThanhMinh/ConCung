<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/size">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/size"
            android:layout_marginBottom="@dimen/size"
            android:src="@drawable/ic_correct" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size"
            android:gravity="center_vertical"
            android:text="Thêm vào giỏ hàng thành công"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/text_"
            android:textStyle="bold" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/size"
        android:background="@color/colorBlack4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="3dp"
            card_view:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/imProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Thùng sữa uống dinh dưỡng Friso Gold dành cho trẻ 2 tuổi trở lên -12 lốc"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:text="528.000"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMultiply"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_below="@+id/tvName"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_toRightOf="@+id/tvPrice"
                android:gravity="bottom"
                android:text="x1"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/text_" />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_toRightOf="@+id/tvMultiply"
                android:text="= 528.000"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text2"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btnSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size2"
        android:background="@drawable/border_login_btn"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/txt_view_cart"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/btChooseMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size2"
        android:gravity="center"

        android:text="@string/txt_choose_more"
        android:textColor="@color/colorAccent"
        android:textSize="15sp" />
</LinearLayout>